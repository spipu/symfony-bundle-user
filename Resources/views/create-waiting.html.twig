        <div class="col-xm-12 col-sm-10 col-md-8 m-auto">
            <div class="card">
                <div class="card-header font-weight-bold">
                    {{ 'spipu.user.content.waiting.confirm_1'|trans() }}
                </div>
                <div class="card-body">
                    {{ 'spipu.user.content.waiting.confirm_2'|trans() }}
